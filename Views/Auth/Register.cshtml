@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Home Page";
    var error = ViewData["error"] as string;
    var user = ViewData["user"] as User;
}

@{
    if (error != null)
    {
        <div class="alert alert-danger" role="alert">
            @error
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-9 col-xs-12">
            <form action="/Auth/Register" method="post">
                <div class="login-form">
                    <h4 class="login-title">Đăng ký</h4>
                    <div class="row">
                        <div class="col-md-6 col-12 mb-20">
                            <label>Tên</label>
                            <input value="@user?.FirstName" name="FirstName" class="mb-0" type="text" placeholder="Tên">
                        </div>
                        <div class="col-md-6 col-12 mb-20">
                            <label>Họ</label>
                            <input value="@user?.LastName" name="LastName" class="mb-0" type="text" placeholder="Họ">
                        </div>
                        <div class="col-md-6 col-12 mb-20">
                            <label>Tên đăng nhập</label>
                            <input value="@user?.Username" name="Username" class="mb-0" type="text"
                                placeholder="Tên đăng nhập">
                        </div>
                        <div class="col-md-6 col-12 mb-20">
                            <label>Ngày sinh</label>
                            <input value="@user?.BirthDate.ToString("yyyy-MM-dd")" name="BirthDate" class="mb-0"
                                type="date" placeholder="Ngày sinh">
                        </div>
                        <div class="col-md-6 col-12 mb-20">
                            <label>Gender</label>
                            <select class="form-select mb-0" name="Gender">
                                @{
                                    if (user?.Gender == "female")
                                    {
                                        <option value="male">Nam</option>
                                        <option selected value="female">Nữ</option>
                                    }
                                    else
                                    {
                                        <option value="male">Nam</option>
                                        <option value="female">Nữ</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 col-12 mb-20">
                            <label>Số điện thoại</label>
                            <input value="@user?.PhoneNumber" name="PhoneNumber" class="mb-0" type="text"
                                placeholder="Số điện thoại">
                        </div>
                        <div class="col-md-12 mb-20">
                            <label>Email *</label>
                            <input value="@user?.Email" name="Email" class="mb-0" type="email" placeholder="Email">
                        </div>
                        <div class="col-md-12 mb-20">
                            <label>Địa chỉ *</label>
                            <input value="@user?.Address" name="Address" class="mb-0" type="text" placeholder="Địa chỉ">
                        </div>
                        <div class="col-md-6 mb-20">
                            <label>Mật khẩu</label>
                            <input name="Password" class="mb-0" type="password" placeholder="Mật khẩu">
                        </div>
                        <div class="col-md-6 mb-20">
                            <label>Xác nhận mật khẩu</label>
                            <input name="ConfirmPassword" class="mb-0" type="password" placeholder="Xác nhận mật khẩu">
                        </div>
                        <div class="col-12">
                            <button class="register-button mt-0">Đăng ký</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('.close').on('click', function () {
        $('.alert').alert('close')
    })
</script>