        <div class="row center_row" style="display: flex; align-items: center; justify-content: center">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30">
                <!-- Login Form s-->
                <form action="/Admin/CreateProduct" method="post" enctype="multipart/form-data">
                    <div class="login-form">
                        <h4 class="login-title">Create</h4>
                        <div class="row">
                            <div class="col-md-12 col-12 mb-20">
                                <label>Name*</label>
                                <input name="ProductName" id="name-edit" class="mb-0" type="text"
                                    placeholder="Name Product">
                            </div>

                            <select class="form-select" hidden name="SupplierId" aria-label="Default select example">
                                <option selected>Select Supplier</option>
                                <option value=1>one</option>
                                <option value=2>two</option>
                            </select>
                            <div class="col-md-12 col-12 mb-20">
                                <label>Select Category*</label>
                                <select class="form-select" name="CategoryId" aria-label="Default select example">
                                    <option selected>Select Category</option>
                                    @{

                                        if (categorys != null)
                                        {
                                            foreach (var item1 in categorys)
                                            {
                                                <option value=@item1.Id>@item1.CategoryName</option>
                                            }
                                        }
                                    }

                                </select>
                            </div>

                            @* <input name="ViewCount" hidden type="text" value="0"> *@

                            <div class="col-12 mb-20" style="display: flex; justify-content: space-between">
                                <div style="width: 50%; padding-right: 5px">
                                    <label>price</label>
                                    <input name="Price" id="price-edit" class="mb-0" type="text" placeholder="Price">
                                </div>
                                <div style="width: 50%; padding-left: 5px">
                                    <label>quantity</label>
                                    <input name="Quantity" id="quantity-edit" class="mb-0" type="text"
                                        placeholder="Quantity">
                                </div>
                            </div>
                            @* <input name="SoldQuantity" type="text" hidden value="0">
                            <input name="Discount" type="text" hidden value="0">
                            <input name="Images" class="form-control" type="file" hidden id="formFileMultiple"> *@

                            <div class="mb-3">
                                <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                                <input name="files" class="form-control" type="file" id="formFileMultiple" multiple>
                            </div>

                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
                                <textarea name="Description" class="form-control" id="exampleFormControlTextarea1"
                                    rows="3"></textarea>
                            </div>

                            <input hidden type="text" name="redirect" id="redirect">

                            <div class="col-md-12">
